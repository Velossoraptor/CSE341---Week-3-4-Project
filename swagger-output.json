{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "Description",
    "version": "1.0.0"
  },
  "host": "dungeonsanddragonssimple.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "description": "Base Page, no params",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api-docs": {
      "get": {
        "description": "Api Documentation; This page",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/spells/": {
      "get": {
        "description": "Gets all spells, no params",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "post": {
        "description": "Creates a new spell, requires body to detail spell. \nindex: Name of spell with no caps, no numbers, dashes instead of space\nname: Name of spell with formatting\nlevel: Integer value for spell level\nurl: URL to read more abou the spell",
        "responses": {
          "200": {
            "description": "OK"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "index": { "type": "string", "example": "acid-splash-two" },
                "name": { "type": "string", "example": "Acid Splash Two" },
                "level": { "type": "integer", "example": "2" },
                "url": { "type": "string", "example": "url/path/otherpath/api" }
              }
            }
          }
        ]
      }
    },
    "/spells/{id}": {
      "get": {
        "description": "Gets a spell by id or index name",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Updates a spell by id or index name",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "index": { "type": "string", "example": "any" },
                "name": { "type": "string", "example": "any" },
                "level": { "type": "integer", "example": "0" },
                "url": { "type": "string", "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
